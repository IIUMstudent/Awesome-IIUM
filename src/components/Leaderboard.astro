---
// Leaderboard.astro
interface Contributor {
	login: string;
	avatar_url: string;
	html_url: string;
	contributions: number;
}

// biome-ignore lint/correctness/noUnusedVariables: Used in template
let contributors: Contributor[] = [];

try {
	const response = await fetch(
		'https://api.github.com/repos/iiumstudent/Awesome-IIUM/contributors?per_page=12',
	);
	if (response.ok) {
		contributors = (await response.json()) as Contributor[];
	} else {
		console.error('Failed to fetch contributors:', response.statusText);
	}
} catch (e) {
	console.error('Failed to fetch contributors', e);
}
---

<div id="leaderboard" class="not-content">
  <div class="leaderboard-container">
    <div id="contributor-list" class="contributor-list">
      {contributors.map((user, index) => (
        <a href={user.html_url} target="_blank" class={`contributor-card rank-${index + 1}`}>
          <div class="rank">#{index + 1}</div>
          <img src={user.avatar_url} alt={user.login} class="avatar" />
          <div class="info">
            <span class="username">{user.login}</span>
            <span class="contributions">{user.contributions} Contributions</span>
          </div>
        </a>
      ))}
    </div>
  </div>
</div>

<style>
  .contributor-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 2rem;
  }
  .contributor-card {
    display: flex;
    align-items: center;
    gap: 12px;
    background: var(--sl-color-bg-nav);
    padding: 1rem;
    border-radius: 12px;
    border: 1px solid var(--sl-color-hairline-light);
    text-decoration: none !important;
    color: inherit !important;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .contributor-card:hover {
    transform: scale(1.03);
    border-color: var(--sl-color-accent);
    background: var(--sl-color-accent-low);
  }
  .rank {
    font-weight: 800;
    font-size: 1.1rem;
    color: var(--sl-color-gray-3);
    min-width: 30px;
  }
  .rank-1 .rank { color: #facc15; } /* Gold */
  .rank-2 .rank { color: #94a3b8; } /* Silver */
  .rank-3 .rank { color: #b45309; } /* Bronze */
  
  .avatar {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    border: 2px solid var(--sl-color-hairline-light);
  }
  .info {
    display: flex;
    flex-direction: column;
  }
  .username {
    font-weight: 600;
    font-size: 0.95rem;
  }
  .contributions {
    font-size: 0.8rem;
    color: var(--sl-color-gray-3);
  }
</style>

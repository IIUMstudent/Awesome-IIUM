---
// Leaderboard.astro
import fs from 'node:fs';
import path from 'node:path';
import { GITHUB_REPO } from '../config';

/**
 * Leaderboard component
 *
 * Purpose: Display top contributors for the repository.
 * Usage: <Leaderboard /> on the dashboard page.
 * Props: None.
 * Client behavior: Server-side rendered at build time with cache fallback.
 * API dependencies: GitHub REST API (contributors endpoint).
 */

const CACHE_DIR = path.join(process.cwd(), '.astro');
const CACHE_FILE = path.join(CACHE_DIR, 'leaderboard-cache.json');
const CACHE_DURATION = 24 * 60 * 60 * 1000; // 24 hours

interface Contributor {
	login: string;
	avatar_url: string;
	html_url: string;
	contributions: number;
}

let contributors: Contributor[] = [];
// biome-ignore lint/correctness/noUnusedVariables: used in template
let error = false;

try {
	let cachedData: Contributor[] | null = null;
	try {
		if (fs.existsSync(CACHE_FILE)) {
			const stats = fs.statSync(CACHE_FILE);
			const now = Date.now();
			if (now - stats.mtimeMs < CACHE_DURATION) {
				const data = fs.readFileSync(CACHE_FILE, 'utf-8');
				cachedData = JSON.parse(data);
			}
		}
	} catch (err) {
		console.warn('Failed to read leaderboard cache:', err);
	}

	if (cachedData) {
		contributors = cachedData;
	} else {
		// Use a higher limit to ensure we get enough active contributors, but slice later if needed
		const response = await fetch(
			`${GITHUB_REPO.apiUrl}/contributors?per_page=12`,
		);
		if (response.ok) {
			contributors = await response.json();
			// Cache the successful response
			try {
				if (!fs.existsSync(CACHE_DIR)) {
					fs.mkdirSync(CACHE_DIR, { recursive: true });
				}
				fs.writeFileSync(CACHE_FILE, JSON.stringify(contributors));
			} catch (err) {
				console.warn('Failed to write leaderboard cache:', err);
			}
		} else {
			console.error(
				`Failed to fetch contributors: ${response.status} ${response.statusText}`,
			);
			error = true;
		}
	}
} catch (e) {
	console.error('Failed to fetch contributors', e);
	error = true;
}
---

<div id="leaderboard" class="not-content">
  <div class="leaderboard-container">
    <div class="contributor-list">
      {contributors.length > 0 ? (
        contributors.map((user, index) => (
          <a href={user.html_url} target="_blank" rel="noopener noreferrer" class={`contributor-card rank-${index + 1}`}>
            <div class="rank">#{index + 1}</div>
            <img
              src={user.avatar_url}
              alt={user.login}
              class="avatar"
              loading="lazy"
              width="45"
              height="45"
            />
            <div class="info">
              <span class="username">{user.login}</span>
              <span class="contributions">{user.contributions} Contributions</span>
            </div>
          </a>
        ))
      ) : (
        <div class="message">
          {error ? 'Unable to load contributors at this time.' : 'No contributors found.'}
        </div>
      )}
    </div>
  </div>
</div>

<style>
  .contributor-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 2rem;
  }
  .contributor-card {
    display: flex;
    align-items: center;
    gap: 12px;
    background: var(--sl-color-bg-nav);
    padding: 1rem;
    border-radius: 12px;
    border: 1px solid var(--sl-color-hairline-light);
    text-decoration: none !important;
    color: inherit !important;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .contributor-card:hover {
    transform: scale(1.03);
    border-color: var(--sl-color-accent);
    background: var(--sl-color-accent-low);
  }
  .rank {
    font-weight: 800;
    font-size: 1.1rem;
    color: var(--sl-color-gray-3);
    min-width: 30px;
  }
  .rank-1 .rank { color: #92400e; } /* Gold - WCAG AA compliant */
  .rank-2 .rank { color: #475569; } /* Silver */
  .rank-3 .rank { color: #78350f; } /* Bronze - WCAG AA compliant */
  
  .avatar {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    border: 2px solid var(--sl-color-hairline-light);
    background-color: var(--sl-color-gray-5); /* Placeholder */
  }
  .info {
    display: flex;
    flex-direction: column;
  }
  .username {
    font-weight: 600;
    font-size: 0.95rem;
  }
  .contributions {
    font-size: 0.8rem;
    color: var(--sl-color-gray-3);
  }
  .message {
    grid-column: 1 / -1;
    text-align: center;
    padding: 2rem;
    color: var(--sl-color-gray-3);
  }
</style>

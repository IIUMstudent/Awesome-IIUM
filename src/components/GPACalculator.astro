<div class="gpa-calculator">
  <h3>ðŸ“Š GPA Calculator</h3>
  <p class="helper-text">Calculate your semester GPA and see how it affects your CGPA.</p>

  <div class="calculator-form">
    <div id="courses-container">
      <div class="course-row" data-index="0">
        <input type="text" class="course-name" placeholder="Course name" aria-label="Course name" />
        <select class="grade" aria-label="Grade">
          <option value="">Grade</option>
          <option value="4.00">A (4.00)</option>
          <option value="3.67">A- (3.67)</option>
          <option value="3.33">B+ (3.33)</option>
          <option value="3.00">B (3.00)</option>
          <option value="2.67">B- (2.67)</option>
          <option value="2.33">C+ (2.33)</option>
          <option value="2.00">C (2.00)</option>
          <option value="1.67">C- (1.67)</option>
          <option value="1.33">D+ (1.33)</option>
          <option value="1.00">D (1.00)</option>
          <option value="0.00">F (0.00)</option>
        </select>
        <select class="credits" aria-label="Credits">
          <option value="">Credits</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
        </select>
        <button type="button" class="remove-btn" title="Remove course" aria-label="Remove course">Ã—</button>
      </div>
    </div>

    <div class="actions">
      <button id="add-course" class="btn-secondary" type="button">+ Add Course</button>
      <button id="calculate" class="btn-primary" type="button">Calculate GPA</button>
      <button id="clear-all" class="btn-ghost" type="button">Clear All</button>
    </div>

    <div id="results" class="results hidden" aria-live="polite">
      <div class="result-card">
        <span class="label">Semester GPA</span>
        <span class="value" id="semester-gpa">0.00</span>
      </div>
      <div class="result-card">
        <span class="label">Total Credits</span>
        <span class="value" id="total-credits">0</span>
      </div>
    </div>

    <h4>Cumulative GPA (Optional)</h4>
    <div class="cumulative-inputs">
      <div class="input-group">
        <label for="prev-cgpa">Current CGPA</label>
        <input type="number" id="prev-cgpa" placeholder="3.50" step="0.01" min="0" max="4" />
      </div>
      <div class="input-group">
        <label for="prev-credits">Credits Earned</label>
        <input type="number" id="prev-credits" placeholder="60" min="0" />
      </div>
    </div>

    <div id="cgpa-result" class="cgpa hidden" aria-live="polite">
      <div class="result-card cgpa">
        <span class="label">New CGPA</span>
        <span class="value" id="new-cgpa">0.00</span>
      </div>
    </div>

    <div class="footer-actions">
      <span class="save-status" id="save-status" aria-live="polite"></span>
      <button id="save-data" class="btn-secondary" type="button">ðŸ’¾ Save</button>
    </div>
  </div>
</div>

<script>
  // GPA Calculator Logic
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('courses-container');
    const addBtn = document.getElementById('add-course');
    const calcBtn = document.getElementById('calculate');
    const clearBtn = document.getElementById('clear-all');
    const saveBtn = document.getElementById('save-data');
    const resultsDiv = document.getElementById('results');
    const cgpaResultDiv = document.getElementById('cgpa-result');

    let courseIndex = 1;

    // Load saved data
    const savedData = localStorage.getItem('iium-gpa-data');
    if (savedData) {
      try {
        const data = JSON.parse(savedData);
        // Restore previous CGPA inputs
        if (data.prevCgpa) document.getElementById('prev-cgpa').value = data.prevCgpa;
        if (data.prevCredits) document.getElementById('prev-credits').value = data.prevCredits;
      } catch (e) {}
    }

    // Add new course row
    addBtn?.addEventListener('click', () => {
      const row = document.createElement('div');
      row.className = 'course-row slide-in';
      row.dataset.index = courseIndex++;
      row.innerHTML = `
        <input type="text" class="course-name" placeholder="Course name" aria-label="Course name" />
        <select class="grade" aria-label="Grade">
          <option value="">Grade</option>
          <option value="4.00">A (4.00)</option>
          <option value="3.67">A- (3.67)</option>
          <option value="3.33">B+ (3.33)</option>
          <option value="3.00">B (3.00)</option>
          <option value="2.67">B- (2.67)</option>
          <option value="2.33">C+ (2.33)</option>
          <option value="2.00">C (2.00)</option>
          <option value="1.67">C- (1.67)</option>
          <option value="1.33">D+ (1.33)</option>
          <option value="1.00">D (1.00)</option>
          <option value="0.00">F (0.00)</option>
        </select>
        <select class="credits" aria-label="Credits">
          <option value="">Credits</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
        </select>
        <button type="button" class="remove-btn" title="Remove course" aria-label="Remove course">Ã—</button>
      `;
      container?.appendChild(row);
      row.querySelector('.course-name')?.focus();
    });

    // Remove course row
    container?.addEventListener('click', (e) => {
      const btn = e.target.closest('.remove-btn');
      if (btn) {
        const rows = container.querySelectorAll('.course-row');
        if (rows.length > 1) {
          const row = btn.closest('.course-row');

          // Focus management
          const currentRowIndex = Array.from(rows).indexOf(row);
          const nextRow = rows[currentRowIndex + 1] || rows[currentRowIndex - 1];

          // Animate removal
          row.classList.add('slide-out');

          row.addEventListener('animationend', () => {
            row.remove();
            // Restore focus
            if (nextRow) {
               nextRow.querySelector('.course-name')?.focus();
            } else {
               addBtn?.focus();
            }
          }, { once: true });
        }
      }
    });

    // Calculate GPA
    calcBtn?.addEventListener('click', () => {
      const rows = container?.querySelectorAll('.course-row');
      let totalPoints = 0;
      let totalCredits = 0;

      rows?.forEach((row) => {
        const grade = parseFloat(row.querySelector('.grade').value);
        const credits = parseInt(row.querySelector('.credits').value);
        
        if (!isNaN(grade) && !isNaN(credits)) {
          totalPoints += grade * credits;
          totalCredits += credits;
        }
      });

      const semesterGpa = totalCredits > 0 ? (totalPoints / totalCredits).toFixed(2) : '0.00';
      
      document.getElementById('semester-gpa').textContent = semesterGpa;
      document.getElementById('total-credits').textContent = totalCredits;
      resultsDiv?.classList.remove('hidden');

      // Calculate cumulative GPA if previous data provided
      const prevCgpa = parseFloat(document.getElementById('prev-cgpa').value);
      const prevCredits = parseInt(document.getElementById('prev-credits').value);

      if (!isNaN(prevCgpa) && !isNaN(prevCredits) && prevCredits > 0) {
        const prevPoints = prevCgpa * prevCredits;
        const newTotalPoints = prevPoints + totalPoints;
        const newTotalCredits = prevCredits + totalCredits;
        const newCgpa = (newTotalPoints / newTotalCredits).toFixed(2);
        
        document.getElementById('new-cgpa').textContent = newCgpa;
        cgpaResultDiv?.classList.remove('hidden');
      }
    });

    // Clear all
    clearBtn?.addEventListener('click', () => {
      const rows = container?.querySelectorAll('.course-row');
      rows?.forEach((row, i) => {
        if (i > 0) row.remove();
        else {
          row.querySelector('.course-name').value = '';
          row.querySelector('.grade').value = '';
          row.querySelector('.credits').value = '';
          row.querySelector('.course-name').focus();
        }
      });
      document.getElementById('prev-cgpa').value = '';
      document.getElementById('prev-credits').value = '';
      resultsDiv?.classList.add('hidden');
      cgpaResultDiv?.classList.add('hidden');
    });

    // Save data
    saveBtn?.addEventListener('click', () => {
      const prevCgpaInput = document.getElementById('prev-cgpa');
      const prevCreditsInput = document.getElementById('prev-credits');

      const data = {
        prevCgpa: prevCgpaInput?.value || '',
        prevCredits: prevCreditsInput?.value || '',
      };
      localStorage.setItem('iium-gpa-data', JSON.stringify(data));

      const originalText = saveBtn.textContent;
      saveBtn.textContent = 'âœ… Saved!';
      saveBtn.disabled = true;

      setTimeout(() => {
        saveBtn.textContent = originalText;
        saveBtn.disabled = false;
      }, 2000);
    });
  });
</script>


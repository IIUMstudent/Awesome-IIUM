<div class="gpa-calculator">
  <h3>ðŸ“Š GPA Calculator</h3>
  <p class="helper-text">Calculate your semester GPA and see how it affects your CGPA.</p>

  <div class="calculator-form">
    <div id="courses-container">
      <div class="course-row" data-index="0">
        <input type="text" class="course-name" placeholder="Course name" aria-label="Course name" maxlength="60" />
        <select class="grade" aria-label="Grade">
          <option value="">Grade</option>
          <option value="4.00">A (4.00)</option>
          <option value="3.67">A- (3.67)</option>
          <option value="3.33">B+ (3.33)</option>
          <option value="3.00">B (3.00)</option>
          <option value="2.67">B- (2.67)</option>
          <option value="2.33">C+ (2.33)</option>
          <option value="2.00">C (2.00)</option>
          <option value="1.67">C- (1.67)</option>
          <option value="1.33">D+ (1.33)</option>
          <option value="1.00">D (1.00)</option>
          <option value="0.00">F (0.00)</option>
        </select>
        <select class="credits" aria-label="Credits">
          <option value="">Credits</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
        </select>
        <button type="button" class="remove-btn" title="Remove course" aria-label="Remove course">Ã—</button>
      </div>
    </div>

    <div class="actions">
      <button id="add-course" class="btn-secondary" type="button">+ Add Course</button>
      <button id="calculate" class="btn-primary" type="button">Calculate GPA</button>
      <button id="clear-all" class="btn-ghost" type="button">Clear All</button>
    </div>

    <div id="validation-error" class="validation-error" aria-live="polite"></div>

    <div id="results" class="results hidden" aria-live="polite">
      <div class="result-card">
        <span class="label">Semester GPA</span>
        <div class="value-wrapper">
          <span class="value" id="semester-gpa">0.00</span>
          <button class="copy-btn" type="button" aria-label="Copy Semester GPA" title="Copy to clipboard">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
              <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
            </svg>
          </button>
        </div>
      </div>
      <div class="result-card">
        <span class="label">Total Credits</span>
        <span class="value" id="total-credits">0</span>
      </div>
    </div>

    <h4>Cumulative GPA (Optional)</h4>
    <div class="cumulative-inputs">
      <div class="input-group">
        <label for="prev-cgpa">Current CGPA</label>
        <input type="number" id="prev-cgpa" placeholder="3.50" step="0.01" min="0" max="4" />
      </div>
      <div class="input-group">
        <label for="prev-credits">Credits Earned</label>
        <input type="number" id="prev-credits" placeholder="60" min="0" max="200" />
      </div>
    </div>

    <div id="cgpa-result" class="cgpa hidden" aria-live="polite">
      <div class="result-card cgpa">
        <span class="label">New CGPA</span>
        <div class="value-wrapper">
          <span class="value" id="new-cgpa">0.00</span>
          <button class="copy-btn" type="button" aria-label="Copy New CGPA" title="Copy to clipboard">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
              <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <div class="footer-actions">
      <span class="save-status" id="save-status" aria-live="polite"></span>
      <button id="save-data" class="btn-secondary" type="button">ðŸ’¾ Save</button>
    </div>
  </div>
</div>

<script>
  // GPA Calculator Logic
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('courses-container');
    const addBtn = document.getElementById('add-course');
    const calcBtn = document.getElementById('calculate');
    const clearBtn = document.getElementById('clear-all');
    const saveBtn = document.getElementById('save-data');
    const resultsDiv = document.getElementById('results');
    const cgpaResultDiv = document.getElementById('cgpa-result');

    let courseIndex = 1;
    const MAX_COURSES = 50;

    // Helper to update buttons state
    const updateButtons = () => {
      const rows = container?.querySelectorAll('.course-row');
      const removeBtns = container?.querySelectorAll('.remove-btn');

      if (rows && removeBtns) {
        // Update remove buttons
        const shouldDisableRemove = rows.length <= 1;
        removeBtns.forEach((btn) => {
          (btn as HTMLButtonElement).disabled = shouldDisableRemove;
        });

        // Update add button
        if (addBtn) {
          const limitReached = rows.length >= MAX_COURSES;
          (addBtn as HTMLButtonElement).disabled = limitReached;
          addBtn.title = limitReached ? 'Maximum courses reached' : '';
        }
      }
    };

    // Load saved data
    const savedData = localStorage.getItem('iium-gpa-data');
    if (savedData) {
      try {
        const data = JSON.parse(savedData);
        // Restore previous CGPA inputs
        if (data.prevCgpa) document.getElementById('prev-cgpa').value = data.prevCgpa;
        if (data.prevCredits) document.getElementById('prev-credits').value = data.prevCredits;
      } catch (e) {}
    }

    updateButtons();

    // Keyboard navigation for adding rows
    container?.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        const target = e.target as HTMLElement;
        const row = target.closest('.course-row');

        // Only trigger if we are inside a course row input/select
        if (row && (target.tagName === 'INPUT' || target.tagName === 'SELECT')) {
          e.preventDefault();

          if (!row.nextElementSibling) {
            // If last row, add new row (if not disabled)
            if (!(addBtn as HTMLButtonElement).disabled) {
              addBtn?.click();
            }
          } else {
            // If not last row, move focus to next row
            const nextRow = row.nextElementSibling;
            const nextInput = nextRow.querySelector('.course-name') as HTMLElement;
            nextInput?.focus();
          }
        }
      }
    });

    // Add new course row
    addBtn?.addEventListener('click', () => {
      const currentRows = container?.querySelectorAll('.course-row').length || 0;
      if (currentRows >= MAX_COURSES) return;

      const row = document.createElement('div');
      row.className = 'course-row slide-in';
      row.dataset.index = courseIndex++;
      row.innerHTML = `
        <input type="text" class="course-name" placeholder="Course name" aria-label="Course name" maxlength="60" />
        <select class="grade" aria-label="Grade">
          <option value="">Grade</option>
          <option value="4.00">A (4.00)</option>
          <option value="3.67">A- (3.67)</option>
          <option value="3.33">B+ (3.33)</option>
          <option value="3.00">B (3.00)</option>
          <option value="2.67">B- (2.67)</option>
          <option value="2.33">C+ (2.33)</option>
          <option value="2.00">C (2.00)</option>
          <option value="1.67">C- (1.67)</option>
          <option value="1.33">D+ (1.33)</option>
          <option value="1.00">D (1.00)</option>
          <option value="0.00">F (0.00)</option>
        </select>
        <select class="credits" aria-label="Credits">
          <option value="">Credits</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
        </select>
        <button type="button" class="remove-btn" title="Remove course" aria-label="Remove course">Ã—</button>
      `;
      container?.appendChild(row);
      updateButtons();
      (row.querySelector('.course-name') as HTMLElement)?.focus();
    });

    // Remove course row
    container?.addEventListener('click', (e) => {
      const btn = e.target.closest('.remove-btn') as HTMLButtonElement | null;
      if (btn) {
        const rows = Array.from(container.querySelectorAll('.course-row'));

        if (rows.length > 1) {
          const currentRow = btn.closest('.course-row');
          if (!currentRow) return;

          const executeRemoval = () => {
            // Find the next element to focus before removing
            // Prioritize the next row, then the previous row
            let nextFocusTarget = currentRow.nextElementSibling?.querySelector('.remove-btn');
            if (!nextFocusTarget) {
              nextFocusTarget = currentRow.previousElementSibling?.querySelector('.remove-btn');
            }

            currentRow.remove();

            if (nextFocusTarget) {
              (nextFocusTarget as HTMLElement).focus();
            }
            // Ensure buttons state is updated after removal
            updateButtons();
          };

          const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

          if (prefersReducedMotion) {
            executeRemoval();
          } else {
            currentRow.classList.add('removing');
            // Match CSS animation duration (0.2s)
            setTimeout(executeRemoval, 200);
          }
        }
      }
    });

    // Clear validation errors on input
    container?.addEventListener('input', (e) => {
      const target = e.target as HTMLElement;
      if (target.classList.contains('input-error')) {
        target.classList.remove('input-error');
        target.removeAttribute('aria-invalid');
      }
      document.getElementById('validation-error')?.classList.remove('visible');
    });

    // Calculate GPA
    calcBtn?.addEventListener('click', () => {
      const rows = container?.querySelectorAll('.course-row');
      const errorDiv = document.getElementById('validation-error');

      if (errorDiv) {
        errorDiv.textContent = '';
        errorDiv.classList.remove('visible');
      }

      let hasErrors = false;
      let totalPoints = 0;
      let totalCredits = 0;

      rows?.forEach((row) => {
        const nameInput = row.querySelector('.course-name') as HTMLInputElement;
        const gradeSelect = row.querySelector('.grade') as HTMLSelectElement;
        const creditsSelect = row.querySelector('.credits') as HTMLSelectElement;

        // Reset error state
        [nameInput, gradeSelect, creditsSelect].forEach(el => {
          el?.classList.remove('input-error');
          el?.removeAttribute('aria-invalid');
        });

        const hasName = nameInput.value.trim() !== '';
        const hasGrade = gradeSelect.value !== '';
        const hasCredits = creditsSelect.value !== '';

        // Check if row has partial data
        const hasAnyData = hasName || hasGrade || hasCredits;
        
        // If row is started but incomplete (missing grade or credits)
        if (hasAnyData && (!hasGrade || !hasCredits)) {
          hasErrors = true;
          if (!hasGrade) {
            gradeSelect.classList.add('input-error');
            gradeSelect.setAttribute('aria-invalid', 'true');
          }
          if (!hasCredits) {
            creditsSelect.classList.add('input-error');
            creditsSelect.setAttribute('aria-invalid', 'true');
          }
        } else if (hasGrade && hasCredits) {
          // Only calculate complete rows
          const grade = parseFloat(gradeSelect.value);
          const credits = parseInt(creditsSelect.value);

          if (!isNaN(grade) && !isNaN(credits)) {
            totalPoints += grade * credits;
            totalCredits += credits;
          }
        }
      });

      if (hasErrors) {
        if (errorDiv) {
          errorDiv.textContent = 'âš ï¸ Please fill in Grade and Credits for all started courses.';
          errorDiv.classList.add('visible');
        }
        resultsDiv?.classList.add('hidden');
        cgpaResultDiv?.classList.add('hidden');
        return;
      }

      const semesterGpa = totalCredits > 0 ? (totalPoints / totalCredits).toFixed(2) : '0.00';
      
      document.getElementById('semester-gpa').textContent = semesterGpa;
      document.getElementById('total-credits').textContent = totalCredits;
      resultsDiv?.classList.remove('hidden');

      // Calculate cumulative GPA if previous data provided
      const prevCgpa = parseFloat(document.getElementById('prev-cgpa').value);
      const prevCredits = parseInt(document.getElementById('prev-credits').value);

      if (!isNaN(prevCgpa) && !isNaN(prevCredits) && prevCredits > 0) {
        const prevPoints = prevCgpa * prevCredits;
        const newTotalPoints = prevPoints + totalPoints;
        const newTotalCredits = prevCredits + totalCredits;
        const newCgpa = (newTotalPoints / newTotalCredits).toFixed(2);
        
        document.getElementById('new-cgpa').textContent = newCgpa;
        cgpaResultDiv?.classList.remove('hidden');
      }
    });

    // Clear all with confirmation
    let clearConfirmTimeout: ReturnType<typeof setTimeout>;

    clearBtn?.addEventListener('click', () => {
      if (clearBtn.getAttribute('data-confirm') === 'true') {
        // Confirmed action
        const rows = container?.querySelectorAll('.course-row');
        rows?.forEach((row, i) => {
          if (i > 0) row.remove();
          else {
            row.querySelector('.course-name').value = '';
            row.querySelector('.grade').value = '';
            row.querySelector('.credits').value = '';
            (row.querySelector('.course-name') as HTMLElement).focus();
          }
        });
        (document.getElementById('prev-cgpa') as HTMLInputElement).value = '';
        (document.getElementById('prev-credits') as HTMLInputElement).value = '';
        resultsDiv?.classList.add('hidden');
        cgpaResultDiv?.classList.add('hidden');
        updateButtons();

        // Reset button state
        clearBtn.textContent = 'Clear All';
        clearBtn.classList.remove('btn-danger-text');
        clearBtn.removeAttribute('data-confirm');
        clearTimeout(clearConfirmTimeout);
      } else {
        // First click - ask for confirmation
        const originalText = clearBtn.textContent;
        clearBtn.textContent = 'Confirm Clear?';
        clearBtn.classList.add('btn-danger-text');
        clearBtn.setAttribute('data-confirm', 'true');

        // Reset after 3 seconds if not confirmed
        clearConfirmTimeout = setTimeout(() => {
          clearBtn.textContent = originalText;
          clearBtn.classList.remove('btn-danger-text');
          clearBtn.removeAttribute('data-confirm');
        }, 3000);
      }
    });

    // Save data
    saveBtn?.addEventListener('click', () => {
      const prevCgpaInput = document.getElementById('prev-cgpa');
      const prevCreditsInput = document.getElementById('prev-credits');
      const saveStatus = document.getElementById('save-status');

      const data = {
        prevCgpa: prevCgpaInput?.value || '',
        prevCredits: prevCreditsInput?.value || '',
      };
      localStorage.setItem('iium-gpa-data', JSON.stringify(data));

      const originalText = saveBtn.textContent;
      saveBtn.textContent = 'âœ… Saved!';
      saveBtn.disabled = true;

      if (saveStatus) {
        saveStatus.textContent = 'Changes saved successfully';
        saveStatus.classList.add('visible');
      }

      setTimeout(() => {
        saveBtn.textContent = originalText;
        saveBtn.disabled = false;

        if (saveStatus) {
          saveStatus.classList.remove('visible');
          setTimeout(() => {
            saveStatus.textContent = '';
          }, 300);
        }
      }, 2000);
    });

    // Copy to clipboard functionality
    document.querySelectorAll('.copy-btn').forEach((btn) => {
      btn.addEventListener('click', async () => {
        const valueElement = btn.previousElementSibling;
        const text = valueElement?.textContent || '';

        try {
          await navigator.clipboard.writeText(text);

          // Feedback
          const originalHTML = btn.innerHTML;
          btn.innerHTML = `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>`;
          btn.classList.add('copied');
          btn.setAttribute('aria-label', 'Copied!');

          setTimeout(() => {
            btn.innerHTML = originalHTML;
            btn.classList.remove('copied');
            btn.setAttribute('aria-label', 'Copy to clipboard');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    });
  });
</script>


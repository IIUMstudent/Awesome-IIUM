{
	"$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!**/.astro",
			"!**/dist",
			"!**/public/api/status.json",
			"!**/node_modules"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}

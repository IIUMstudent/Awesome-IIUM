{
	"name": "awesome-iium",
	"version": "1.0.0",
	"description": "A curated list of resources for IIUM",
	"packageManager": "pnpm@10.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/iiumstudent/Awesome-IIUM.git"
	},
	"scripts": {
		"dev": "astro dev",
		"start": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:debug": "playwright test --debug",
		"test:a11y": "playwright test tests/e2e/accessibility.spec.ts",
		"test:pa11y": "pa11y-ci",
		"test:lighthouse": "lhci autorun",
		"lint:md": "markdownlint '*.md' 'src/**/*.{md,mdx}' --ignore node_modules",
		"format:md": "prettier --write 'src/**/*.{md,mdx}'",
		"lint:js": "biome check .",
		"format:js": "biome format --write .",
		"lint": "pnpm run lint:js && pnpm run lint:md",
		"format": "pnpm run format:js && pnpm run format:md",
		"prepare": "husky install"
	},
	"lint-staged": {
		"src/**/*.{js,ts,astro}": [
			"biome check --fix"
		],
		"src/**/*.{md,mdx}": [
			"prettier --write",
			"markdownlint"
		]
	},
	"pnpm": {
		"overrides": {
			"tmp": ">=0.2.4"
		}
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.11.0",
		"@biomejs/biome": "^2.3.13",
		"@lhci/cli": "^0.15.1",
		"@playwright/test": "^1.58.1",
		"@vitest/coverage-v8": "4.0.18",
		"@vitest/ui": "^4.0.18",
		"awesome-lint": "^2.2.3",
		"happy-dom": "^20.5.0",
		"husky": "^9.1.7",
		"jsdom": "^28.0.0",
		"lint-staged": "^16.2.7",
		"markdownlint-cli": "^0.47.0",
		"npm-run-all": "^4.1.5",
		"pa11y-ci": "^4.0.1",
		"prettier": "^3.8.1",
		"rollup-plugin-visualizer": "^6.0.5",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"@astrojs/starlight": "^0.37.6",
		"@sentry/astro": "^10.38.0",
		"@vite-pwa/astro": "^1.2.0",
		"astro": "^5.17.1",
		"sharp": "^0.34.5",
		"workbox-window": "^7.4.0"
	}
}